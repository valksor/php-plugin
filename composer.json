{
    "name": "valksor/php-plugin",
    "description": "Composer plugin providing automatic recipe processing for PHP packages, similar to Symfony Flex",
    "license": "BSD-3-Clause",
    "type": "composer-plugin",
    "keywords": [
        "composer-plugin",
        "recipes",
        "automation",
        "symfony-flex",
        "package-management",
        "auto-discovery",
        "php",
        "valksor"
    ],
    "homepage": "https://github.com/valksor/php-plugin",
    "support": {
        "issues": "https://github.com/valksor/php-plugin/issues",
        "source": "https://github.com/valksor/php-plugin",
        "docs": "https://github.com/valksor/php-plugin/blob/master/README.md"
    },
    "require": {
        "php": ">=8.4",
        "composer-plugin-api": "^2",
        "symfony/console": "*",
        "symfony/flex": "*"
    },
    "require-dev": {
        "composer/composer": "^2",
        "mockery/mockery": "^2.0",
        "phpunit/phpunit": "^12.0",
        "roave/security-advisories": "dev-latest",
        "symfony/filesystem": "^7.4"
    },
    "minimum-stability": "dev",
    "prefer-stable": false,
    "autoload": {
        "psr-4": {
            "ValksorPlugin\\": "src/ValksorPlugin/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ValksorPlugin\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "valksor/php-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "class": "ValksorPlugin\\ValksorFlex"
    }
}
